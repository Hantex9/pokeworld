{
  "private": true,
  "name": "@pokeworld/pokedex-app",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "dev": "expo start --port 8082 --dev-client",
    "lint": "eslint --ext js,ts,tsx .",
    "test": "jest",
    "build": "expo export --output-dir ./build --platform all",
    "build:dev:ios": "eas build --profile dev-client --platform ios --local",
    "generate:schema": "get-graphql-schema https://graphql-pokeapi.graphcdn.app/ > schema.graphql",
    "relay": "relay-compiler --watch",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "postinstall": "relay-compiler"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@pokeworld/ui": "workspace:*",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "expo": "~53.0.6",
    "expo-blur": "~14.1.4",
    "expo-constants": "~17.1.5",
    "expo-dev-client": "~5.2.4",
    "expo-font": "~13.3.1",
    "expo-haptics": "~14.1.4",
    "expo-linking": "~7.1.4",
    "expo-router": "~5.0.5",
    "expo-splash-screen": "~0.30.8",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.4",
    "expo-system-ui": "~5.0.7",
    "expo-web-browser": "~14.1.6",
    "lodash": "^4.17.21",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-error-boundary": "^6.0.0",
    "react-native": "0.79.2",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.5",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.10.0",
    "react-native-svg-transformer": "^1.5.1",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "react-relay": "^20.0.0",
    "relay-runtime": "^20.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@pokeworld/eslint-config": "workspace:*",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.20",
    "@types/react": "~19.0.14",
    "@types/react-relay": "^18.2.1",
    "@types/relay-runtime": "^19.0.2",
    "babel-plugin-relay": "^20.0.0",
    "eslint-plugin-relay": "^2.0.0",
    "get-graphql-schema": "^2.1.2",
    "graphql": "^16.11.0",
    "graphql-config": "^5.1.5",
    "jest": "^29.2.1",
    "jest-expo": "~53.0.4",
    "relay-compiler": "^20.0.0",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": "@pokeworld/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  },
  "jest": {
    "preset": "jest-expo"
  }
}
